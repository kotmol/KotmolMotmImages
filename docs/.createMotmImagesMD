#!/bin/bash

# https://stackoverflow.com/a/49440990
## q=0; while [[ q -lt 3 ]]; do ((q++)); echo $q; done
#

if [ ! -d img ]; then
   echo "this script must be run from the docs dir"
   exit 1
fi

rm -f MotmImages.md
cd motm_png

files=`/bin/ls *.png`

cd ..
i=0
for file in $files
do
    echo "$file <img src=\"motm_png/$file\" width=100>"   >> MotmImages.md
    ((i++))
    if [[ i -gt 3 ]]; then
      echo "<br>" >> MotmImages.md
      i=0
      fi
done
